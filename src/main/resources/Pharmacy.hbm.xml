<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pharmacy.reference.data.entity.Pharmacy" table="pharmacies">
        <id name="id" type="long" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name" type="string"/>
        <property name="address" column="address" type="string"/>
        <property name="district" column="district" type="string"/>

        <bag name="medicines" table="medicines" inverse="true" lazy="false" fetch="select"
             cascade="all-delete-orphan">
            <key>
                <column name="id" not-null="true"/>
            </key>
            <one-to-many class="pharmacy.reference.data.entity.Medicine"/>
        </bag>

    </class>
</hibernate-mapping>