<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pharmacy.reference.data.entity.Medicine" table="medicines">
        <id name="id"  column="id" type="long">
            <generator class="identity" />
        </id>
        <property name="name" column="name" type="string"/>
        <property name="price" column="price" type="float"/>
        <property name="quantity" column="quantity" type="int"/>
        <property name="manufacturer" column="manufacturer" type="string"/>
        <property name="country" column="country" type="string"/>
        <many-to-one name="pharmacy" column="pharmacy_id" class="pharmacy.reference.data.entity.Pharmacy" not-null="true"/>
    </class>
</hibernate-mapping>